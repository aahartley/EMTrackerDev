@model IEnumerable<EMTrackerDev.Models.Sample>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>


</head>
<body>
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table id="table" class="table table-striped table-bordered table-sm" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SampleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UOM)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SampleDate)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Status.StatusName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SampleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UOM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SampleDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.StatusName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SampleID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.SampleID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.SampleID">Delete</a> |
                        <a asp-action="Retrieve" asp-route-id="@item.SampleID">Retrieve</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>





<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>

