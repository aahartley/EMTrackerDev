@model EMTrackerDev.Models.Sample

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sample</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SampleID" />
            
            <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" required />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="latitude" class="control-label"></label>
                <input asp-for="latitude" class="form-control"required />
                <span asp-validation-for="latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="longitude" class="control-label"></label>
                <input asp-for="longitude" class="form-control"required />
                <span asp-validation-for="longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnalysisId" class="control-label"></label>
                <select asp-for="AnalysisId" class="form-control" asp-items="ViewBag.AnalysisId" ReadOnly="true"></select>
            </div>
               <div class="form-group">
                <label asp-for="LocationCodeId" class="control-label"></label>
                <select asp-for="LocationCodeId" class="form-control" asp-items="ViewBag.LocationCodeId" readonly></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

